generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum Role {
    CLIENT
    PARTNER
    ADMIN
}

model User {
    id       Int    @id @default(autoincrement())
    name     String
    email    String @unique
    password String
    role     Role

    hotels       Hotel[]
    reservations Reservation[]
}

model Region {
    id   Int    @id @default(autoincrement())
    name String @unique
    lat  Float
    lon  Float

    hotels Hotel[]
}

model Hotel {
    id       Int       @id @default(autoincrement())
    name     String
    regionId Int
    imageUrl String
    rating   Float
    reviews  Int
    owner    Int
    features Feature[]
    rooms    Room[]

    region Region @relation(fields: [regionId], references: [id])
    User   User   @relation(fields: [owner], references: [id])
}

model Feature {
    id      Int    @id @default(autoincrement())
    name    String
    hotelId Int

    Hotel Hotel @relation(fields: [hotelId], references: [id])
}

model Room {
    id                 Int           @id @default(autoincrement())
    nightPrice         Int
    maximumGuestsCount Int
    hotelId            Int
    reservations       Reservation[]

    Hotel Hotel @relation(fields: [hotelId], references: [id])
}

model Reservation {
    id           Int      @id @default(autoincrement())
    checkInDate  DateTime
    checkOutDate DateTime
    roomId       Int
    userId       Int

    User User @relation(fields: [userId], references: [id])
    Room Room @relation(fields: [roomId], references: [id])
}
