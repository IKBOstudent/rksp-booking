generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id           Int           @id @default(autoincrement())
    name         String
    email        String        @unique
    password     String
    role         Role
    Hotel        Hotel[]
    reservations Reservation[]
}

enum Role {
    CLIENT
    PARTNER
    ADMIN
}

model Hotel {
    id                  Int           @id @default(autoincrement())
    name                String
    region              String
    imageUrl            String
    rating              Float
    reviews             Int
    features            Feature[]
    availableRoomsCount Int
    reservations        Reservation[]
    User                User          @relation(fields: [owner], references: [id])
    owner               Int
}

model Feature {
    id      Int     @id @default(autoincrement())
    value   Boolean
    name    String
    Hotel   Hotel   @relation(fields: [hotelId], references: [id])
    hotelId Int
}

model Reservation {
    id           Int      @id @default(autoincrement())
    checkInDate  DateTime
    checkOutDate DateTime
    hotel        Hotel    @relation(fields: [hotelId], references: [id])
    hotelId      Int
    guestsCount  Int
    User         User     @relation(fields: [userId], references: [id])
    userId       Int
}
