generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum Role {
    CLIENT
    PARTNER
    ADMIN
}

model User {
    id       Int    @id @default(autoincrement())
    name     String
    email    String @unique
    password String
    role     Role

    hotels       Hotel[]
    reservations Reservation[]
}

model Region {
    id   Int    @id @default(autoincrement())
    name String @unique
    lat  Float
    lon  Float

    hotels Hotel[]
}

model Hotel {
    id                  Int           @id @default(autoincrement())
    name                String
    regionId            Int
    imageUrl            String
    price               Int
    rating              Float
    reviews             Int
    features            Feature[]
    availableRoomsCount Int
    reservations        Reservation[]
    owner               Int

    region Region @relation(fields: [regionId], references: [id])
    User   User   @relation(fields: [owner], references: [id])
}

model Feature {
    id      Int     @id @default(autoincrement())
    value   Boolean
    name    String
    hotelId Int

    Hotel Hotel @relation(fields: [hotelId], references: [id])
}

model Reservation {
    id           Int      @id @default(autoincrement())
    checkInDate  DateTime
    checkOutDate DateTime
    guestsCount  Int
    hotelId      Int
    userId       Int

    User  User  @relation(fields: [userId], references: [id])
    hotel Hotel @relation(fields: [hotelId], references: [id])
}
